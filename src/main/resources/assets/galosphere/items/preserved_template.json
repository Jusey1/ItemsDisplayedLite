{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:context_entity_type",
    "cases": [
      {
        "when": "items_displayed:item_display",
        "model": {
          "type": "minecraft:model",
          "model": "items_displayed:block/template/galosphere/preserved_template"
        }
      },
      {
        "when": "items_displayed:display_pillow",
        "model": {
          "type": "minecraft:model",
          "model": "items_displayed:block/template/galosphere/preserved_template"
        }
      }
    ],
    "fallback": {
      "type": "minecraft:model",
      "model": "galosphere:item/preserved_template"
    }
  }
}